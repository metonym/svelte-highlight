{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2020", "DOM"],
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "types": ["svelte"]
  },
  "include": ["tests/*"]
}
