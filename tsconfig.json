{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "ignoreDeprecations": "5.0",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@www/*": ["./www/*"],
      "@layouts/*": ["./www/layouts/*"],
      "@components/*": ["./www/components/*"],
      "svelte-highlight": ["./src"],
      "svelte-highlight/*": ["./src/*"]
    },
    "types": ["bun-types"]
  },
  "include": ["src/**/*", "www/**/*", "tests/**/*"]
}
