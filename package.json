{
  "name": "svelte-highlight",
  "version": "0.6.2",
  "license": "MIT",
  "description": "Syntax Highlighting for Svelte using highlight.js",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "./src/index.js",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "format": "prettier --write '*/**/*.{svelte,js,ts,md}'",
    "svelte-check": "svelte-check --workspace tests",
    "prepack": "node scripts && rollup -c"
  },
  "dependencies": {
    "highlight.js": "10.4.0",
    "highlightjs-svelte": "1.0.6",
    "prettier": "^2.2.0",
    "prettier-plugin-svelte": "^1.4.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/prettier": "^2.1.5",
    "glob": "^7.1.6",
    "rollup": "^2.33.3",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.30.0",
    "svelte-check": "^1.1.17",
    "typescript": "^4.1.2"
  },
  "prettier": {
    "svelteStrictMode": true,
    "svelteBracketNewLine": true,
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-highlight.git"
  },
  "homepage": "https://github.com/metonym/svelte-highlight",
  "bugs": "https://github.com/metonym/svelte-highlight/issues",
  "keywords": [
    "svelte",
    "svelte 3",
    "highlight.js",
    "highlight",
    "code",
    "syntax"
  ],
  "files": [
    "languages",
    "lib",
    "styles",
    "src",
    "types"
  ]
}
