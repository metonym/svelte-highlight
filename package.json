{
  "name": "svelte-highlight",
  "version": "7.9.0",
  "license": "MIT",
  "description": "Svelte component library for highlighting code using highlight.js",
  "author": "Eric Liu (https://github.com/metonym)",
  "type": "module",
  "scripts": {
    "dev": "bun --bun astro dev",
    "build": "bun --bun astro build",
    "preview": "bun --bun astro preview",
    "build:lib": "bun scripts/index.ts && bun format",
    "package": "bun scripts/npm-package.ts",
    "test:unit": "bun test tests/*.ts",
    "test:e2e": "bunx playwright test",
    "test:types": "tsgo",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "upgrade-examples": "bun scripts/upgrade-examples.ts",
    "astro": "astro",
    "playwright": "playwright"
  },
  "dependencies": {
    "highlight.js": "11.11.1"
  },
  "devDependencies": {
    "@astrojs/svelte": "^5.7.3",
    "@biomejs/biome": "2.3.13",
    "@playwright/experimental-ct-svelte": "1.57.0",
    "@playwright/test": "1.57.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@types/bun": "^1.3.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@typescript/native-preview": "^7.0.0-dev.20260118.1",
    "astro": "^4.16.19",
    "carbon-components-svelte": "0.98.6",
    "carbon-preprocess-svelte": "^0.11.22",
    "cssnano": "^7.1.2",
    "cssnano-preset-lite": "^4.0.4",
    "postcss": "^8.5.6",
    "postcss-discard-duplicates": "^7.0.2",
    "postcss-inline-css-vars": "^0.1.0",
    "postcss-merge-rules": "^7.0.7",
    "svelte": "^5.47.0",
    "svelte-focus-key": "latest",
    "vite": "^6.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metonym/svelte-highlight.git"
  },
  "homepage": "https://svhe.onrender.com/",
  "bugs": "https://github.com/metonym/svelte-highlight/issues",
  "keywords": [
    "svelte",
    "svelte components",
    "highlight.js",
    "syntax highlight"
  ]
}
