  "dependencies": {
    "highlight.js": "11.5.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "@testing-library/svelte": "^3.1.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/prettier": "^2.4.4",
    "carbon-components-svelte": "^0.62.2",
    "carbon-icons-svelte": "^10.45.1",
    "carbon-preprocess-svelte": "^0.7.0",
    "jsdom": "^19.0.0",
    "prettier": "^2.6.1",
    "prettier-plugin-svelte": "^2.6.0",
    "svelte": "^3.46.4",
    "svelte-check": "^2.4.6",
    "svelte-focus-key": "^0.3.2",
    "svelte2tsx": "^0.5.6",
    "totalist": "^3.0.0",
    "typescript": "^4.6.3",
    "vitest": "^0.7.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-highlight.git"
  },
  "homepage": "https://github.com/metonym/svelte-highlight",
  "bugs": "https://github.com/metonym/svelte-highlight/issues",
