{
  "name": "svelte-highlight",
  "version": "7.4.2",
  "license": "MIT",
  "description": "Syntax Highlighting for Svelte using highlight.js",
  "author": "Eric Liu (https://github.com/metonym)",
  "sideEffects": [
    "src/styles/*.css"
  ],
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "build:lib": "node scripts",
    "package": "svelte-package",
    "postpackage": "node scripts/postpackage.js",
    "check": "svelte-check --workspace tests",
    "test": "bun test tests/*.ts",
    "test:e2e": "playwright test",
    "format": "prettier --write .",
    "astro": "astro",
    "playwright": "playwright"
  },
  "dependencies": {
    "highlight.js": "11.9.0"
  },
  "devDependencies": {
    "@astrojs/svelte": "^5.0.0",
    "@playwright/experimental-ct-svelte": "^1.40.1",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.4",
    "@types/prettier": "^3.0.0",
    "astro": "^4.0.3",
    "bun-types": "latest",
    "carbon-components-svelte": "^0.82.4",
    "carbon-preprocess-svelte": "^0.10.0",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-focus-key": "^1.0.0",
    "svelte2tsx": "^0.6.27",
    "totalist": "^3.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-highlight.git"
  },
  "homepage": "https://github.com/metonym/svelte-highlight",
  "bugs": "https://github.com/metonym/svelte-highlight/issues",
  "keywords": [
    "svelte",
    "svelte 3",
    "svelte components",
    "highlight.js",
    "highlight",
    "code",
    "syntax",
    "typescript"
  ]
}
