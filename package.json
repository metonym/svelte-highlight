{
  "name": "svelte-highlight",
  "version": "0.7.1",
  "license": "MIT",
  "description": "Syntax Highlighting for Svelte using highlight.js",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "./src/index.js",
  "main": "./src/index.js",
  "types": "./types/index.d.ts",
  "sideEffects": [
    "src/styles/*.css"
  ],
  "scripts": {
    "prepack": "node scripts",
    "test": "svelte-check --workspace=test",
    "format": "prettier --write '.'"
  },
  "dependencies": {
    "highlight.js": "10.7.2"
  },
  "devDependencies": {
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "svelte": "^3.37.0",
    "svelte-check": "^1.4.0"
  },
  "prettier": {
    "svelteStrictMode": true,
    "svelteBracketNewLine": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-highlight.git"
  },
  "homepage": "https://github.com/metonym/svelte-highlight",
  "bugs": "https://github.com/metonym/svelte-highlight/issues",
  "keywords": [
    "svelte",
    "svelte 3",
    "svelte components",
    "highlight.js",
    "highlight",
    "code",
    "syntax",
    "typescript"
  ],
  "files": [
    "src",
    "types"
  ]
}
