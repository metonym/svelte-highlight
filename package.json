    "@playwright/test": "^1.40.1",
    "@types/bun": "latest",
    "@types/node": "^20.10.4",
    "@types/prettier": "^3.0.0",
    "astro": "^4.0.3",
    "carbon-components-svelte": "^0.82.7",
    "cssnano": "^6.0.2",
    "cssnano-preset-lite": "^3.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
