  "devDependencies": {
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "carbon-components-svelte": "^0.44.4",
    "carbon-preprocess-svelte": "^0.6.0",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "svelte": "^3.43.1",
    "svelte-check": "^2.2.7",
    "totalist": "^2.0.0",
    "vite": "^2.6.5"
  },
  "prettier": {
    "svelteStrictMode": true,
    "svelteBracketNewLine": true
