{
  "name": "svelte-highlight",
  "version": "0.6.2",
  "license": "MIT",
  "description": "Syntax Highlighting for Svelte using highlight.js",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "src/index.js",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "sideEffects": [
    "styles/*.css"
  ],
  "scripts": {
    "format": "prettier --write '{src,scripts,docs,examples}/**/*.{svelte,js,md}'",
    "prepack": "node scripts && rollup -c"
  },
  "dependencies": {
    "highlight.js": "9.17.1",
    "highlightjs-svelte": "1.0.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.4",
    "rollup": "^2.39.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.32.3"
  },
  "prettier": {
    "svelteStrictMode": true,
    "svelteBracketNewLine": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-highlight.git"
  },
  "homepage": "https://github.com/metonym/svelte-highlight",
  "bugs": "https://github.com/metonym/svelte-highlight/issues",
  "keywords": [
    "svelte",
    "svelte 3",
    "highlight.js",
    "highlight",
    "code",
    "syntax"
  ],
  "files": [
    "languages",
    "lib",
    "styles",
    "src"
  ]
}
